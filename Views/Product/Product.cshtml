@model ProductViewModel
@{
    ViewBag.Title = Model.Product.Name;
    ViewBag.Meta = Model.Product.Name;
    ViewBag.MetaPic = Model.Product.Photos.First().PhotoWay;
    ViewBag.MetaUrlCategory = Model.Product.Category.LatinName;
    ViewBag.MetaProductName = Model.Product.LatinName;
    ViewBag.MetaProductId = Model.Product.Id;
}

<div class="product-page">
    <div class="product-page__slider slider">
        <div class="slider__btn" id="previous">
